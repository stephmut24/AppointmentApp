<SigDocScreen>:
    name: "signD"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "main"

        MDLabel:
            text: "Rejoignez notre club des meilleurs medecins"
            font_name: "MBarlow"
            font_size: "16sp"
            pos_hint: {"center_x": .6, "center_y": .90}
            color: 0.941, 0.569, 0.325, 1
        
        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .80}
            TextInput:
                id: username_input
                hint_text: "Noms du docteur"
                font_name: "MBarlow"
                size_hint_y: .75
                pos_hint: {"center_x": .43, "center_y": .5}
                background_color: 1, 1, 1, 0
                foreground_color: 0.608, 0.784, 0.969, 1
                cursor_color: 0.608, 0.784, 0.969, 1
                font_size: "14sp"
                cursor_width: "5sp"
                multiline: False
            MDFloatLayout:
                pos_hint: {"center_x": .45, "center_y": .0}
                size_hint_y: .03
                md_bg_color: 0.608, 0.784, 0.969, 1
        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .72}
            TextInput:
                id: email_input
                hint_text: "Email"
                font_name: "MBarlow"
                size_hint_y: .75
                pos_hint: {"center_x": .43, "center_y": .5}
                background_color: 1, 1, 1, 0
                foreground_color: 0.608, 0.784, 0.969, 1
                cursor_color: 0.608, 0.784, 0.969, 1
                font_size: "14sp"
                cursor_width: "5sp"
                multiline: False
            MDFloatLayout:
                pos_hint: {"center_x": .45, "center_y": .0}
                size_hint_y: .03
                md_bg_color: 0.608, 0.784, 0.969, 1
        
        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .64}
            TextInput:
                id: phone_input
                hint_text: "Telephone"
                font_name: "MBarlow"
                size_hint_y: .75
                pos_hint: {"center_x": .43, "center_y": .5}
                background_color: 1, 1, 1, 0
                foreground_color: 0.608, 0.784, 0.969, 1
                cursor_color: 0.608, 0.784, 0.969, 1
                font_size: "14sp"
                cursor_width: "5sp"
                multiline: False
            MDFloatLayout:
                pos_hint: {"center_x": .45, "center_y": .0}
                size_hint_y: .03
                md_bg_color: 0.608, 0.784, 0.969, 1
        
        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .56}
            TextInput:
                id: password_input
                hint_text: "Mot de passe"
                font_name: "MBarlow"
                size_hint_y: .75
                pos_hint: {"center_x": .43, "center_y": .5}
                background_color: 1, 1, 1, 0
                foreground_color: 0.608, 0.784, 0.969, 1
                cursor_color: 0.608, 0.784, 0.969, 1
                font_size: "14sp"
                cursor_width: "5sp"
                multiline: False
                password: True
            MDFloatLayout:
                pos_hint: {"center_x": .45, "center_y": .0}
                size_hint_y: .03
                md_bg_color: 0.608, 0.784, 0.969, 1

        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .48}
            TextInput:
                id: speciality_input
                hint_text: "Specialite"
                font_name: "MBarlow"
                size_hint_y: .75
                pos_hint: {"center_x": .43, "center_y": .5}
                background_color: 1, 1, 1, 0
                foreground_color: 0.608, 0.784, 0.969, 1
                cursor_color: 0.608, 0.784, 0.969, 1
                font_size: "14sp"
                cursor_width: "5sp"
                multiline: False
            MDFloatLayout:
                pos_hint: {"center_x": .45, "center_y": .0}
                size_hint_y: .03
                md_bg_color: 0.608, 0.784, 0.969, 1
        
        Button:
            text: "Créer mon compte"
            size_hint: .50, .065
            pos_hint: {"center_x": .5, "center_y": .38}
            background_color: 0, 0, 0, 0
            font_name: "SBarlow"
            canvas.before:
                Color:
                    rgba: 0.063, 0.498, 0.961, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
            on_release:
                root.signup(username_input.text, email_input.text, password_input.text, phone_input.text,speciality_input.text )
        
        MDLabel:
            text: "OU"
            color: 0.063, 0.498, 0.961, 1
            pos_hint: {"center_y": .30}
            font_size: "13sp"
            font_name: "SBarlow"
            halign: "center"

        MDFloatLayout:
            md_bg_color: 0.608, 0.784, 0.969, 1
            size_hint: .3, .002
            pos_hint: {"center_x": .3, "center_y": .295}

        MDFloatLayout:
            md_bg_color: 0.608, 0.784, 0.969, 1
            size_hint: .3, .002
            pos_hint: {"center_x": .7, "center_y": .295}

        MDLabel:
            text: "Réseaux sociaux"
            font_name: "SBarlow"
            font_size: "13sp"
            halign: "center"
            pos_hint: {"center_y": .260}
            color: 0.529, 0.522, 0.757, 1

        MDGridLayout:
            cols: 3
            size_hint: .48, .07
            pos_hint: {"center_x": .5, "center_y": .190}
            Image:
                source: "assets/g.png"
            Image:
                source: "assets/f.png"
            Image:
                source: "assets/a.png"
        
        MDLabel:
            text: "Vous avez déjà un compte ?"
            font_name: "SBarlow"
            font_size: "15sp"
            halign: "center"
            pos_hint: {"center_y": .1}
            color: 0.941, 0.569, 0.325, 1

        MDTextButton:
            text: "Se connecter"
            font_name: "SBarlow"
            font_size: "15sp"
            pos_hint: {"center_x": .5, "center_y": .05}
            color: 0.063, 0.498, 0.961, 1
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "login"

