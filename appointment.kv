<AppointmentScreen>:
    name: "appointment"
    BoxLayout:
        orientation: 'vertical'
        padding: 10  # Padding global autour des éléments
        spacing: 10  # Espacement entre les éléments

        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            text_color: rgba(26, 24, 58, 255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "main"

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            MDTextField:
                id: nom_field
                hint_text: 'Nom'
                icon_right: "account"
                size_hint: (1, None)
                height: 40
                line_color_normal: [0.8, 0.8, 0.8, 1]  # Couleur de la bordure normale
                line_color_focus: [0, 0, 0, 1]  # Couleur de la bordure quand le champ est focalisé
                padding: [10, 10, 10, 10]  # Padding interne du champ

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            MDTextField:
                id: phone_field
                hint_text: 'Téléphone'
                icon_right: "phone"
                size_hint: (1, None)
                height: 40
                line_color_normal: [0.8, 0.8, 0.8, 1]
                line_color_focus: [0, 0, 0, 1]
                padding: [10, 10, 10, 10]

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            MDTextField:
                id: date_field
                hint_text: 'Date (jj/mm/aaaa)'
                icon_right: "calendar"
                size_hint: (1, None)
                height: 40
                line_color_normal: [0.8, 0.8, 0.8, 1]
                line_color_focus: [0, 0, 0, 1]
                padding: [10, 10, 10, 10]

        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            MDTextField:
                id: heure_field
                hint_text: 'Heure (HH:MM)'
                icon_right: "clock"
                size_hint: (1, None)
                height: 40
                line_color_normal: [0.8, 0.8, 0.8, 1]
                line_color_focus: [0, 0, 0, 1]
                padding: [10, 10, 10, 10]

        MDRaisedButton:
            text: 'Enregistrer le Rendez-vous'
            size_hint: (1, None)
            height: 50
            on_release: root.submit_appointment()
