<SignupScreen>:
    name: "signup"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(26, 24, 58, 255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "main"

        MDLabel:
            text: "Karibu !"
            font_name: "SBarlow"
            font_size: "28sp"
            pos_hint: {"center_x": .6, "center_y": .90}
            color: 0.063, 0.498, 0.961, 1
        
        MDLabel:
            text: "Faites-vous consulter par le meilleur medecin de la ville"
            font_name: "MBarlow"
            font_size: "16sp"
            pos_hint: {"center_x": .6, "center_y": .78}
            color: 0.941, 0.569, 0.325, 1

        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .68}
            TextInput:
                id: username_input
                hint_text: "Nom d'utilisateur"
                font_name: "MBarlow"
                size_hint_y: .75
                pos_hint: {"center_x": .43, "center_y": .5}
                background_color: 1, 1, 1, 0
                foreground_color: 0.608, 0.784, 0.969, 1
                cursor_color: 0.608, 0.784, 0.969, 1
                font_size: "14sp"
                cursor_width: "5sp"
                multiline: False
            MDFloatLayout:
                pos_hint: {"center_x": .45, "center_y": .0}
                size_hint_y: .03
                md_bg_color: 0.608, 0.784, 0.969, 1

        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .58}
            TextInput:
                id: email_input
                hint_text: "Email"
                font_name: "MBarlow"
                size_hint_y: .75
                pos_hint: {"center_x": .43, "center_y": .5}
                background_color: 1, 1, 1, 0
                foreground_color: 0.608, 0.784, 0.969, 1
                cursor_color: 0.608, 0.784, 0.969, 1
                font_size: "14sp"
                cursor_width: "5sp"
                multiline: False
            MDFloatLayout:
                pos_hint: {"center_x": .45, "center_y": .0}
                size_hint_y: .03
                md_bg_color: 0.608, 0.784, 0.969, 1

        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .48}
            TextInput:
                id: phone_input
                hint_text: "Numero de telephone"
                font_name: "MBarlow"
                size_hint_y: .75
                pos_hint: {"center_x": .43, "center_y": .5}
                background_color: 1, 1, 1, 0
                foreground_color: 0.608, 0.784, 0.969, 1
                cursor_color: 0.608, 0.784, 0.969, 1
                font_size: "14sp"
                cursor_width: "5sp"
                multiline: False
            MDFloatLayout:
                pos_hint: {"center_x": .45, "center_y": .0}
                size_hint_y: .03
                md_bg_color: 0.608, 0.784, 0.969, 1

        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .38}
            TextInput:
                id: password_input
                hint_text: "Mot de passe"
                font_name: "MBarlow"
                size_hint_y: .75
                pos_hint: {"center_x": .43, "center_y": .5}
                background_color: 1, 1, 1, 0
                foreground_color: 0.608, 0.784, 0.969, 1
                cursor_color: 0.608, 0.784, 0.969, 1
                font_size: "14sp"
                cursor_width: "5sp"
                multiline: False
                password: True
            MDFloatLayout:
                pos_hint: {"center_x": .45, "center_y": .0}
                size_hint_y: .03
                md_bg_color: 0.608, 0.784, 0.969, 1

        Button:
            text: "Créer mon compte"
            size_hint: .50, .065
            pos_hint: {"center_x": .5, "center_y": .29}
            background_color: 0, 0, 0, 0
            font_name: "SBarlow"
            canvas.before:
                Color:
                    rgba: 0.063, 0.498, 0.961, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
            on_release:
                root.signup(username_input.text, email_input.text, password_input.text, phone_input.text)  # Appel de la méthode signup avec les valeurs des champs

        MDLabel:
            text: "OU"
            color: 0.063, 0.498, 0.961, 1
            pos_hint: {"center_y": .22}
            font_size: "13sp"
            font_name: "SBarlow"
            halign: "center"

        MDFloatLayout:
            md_bg_color: 0.608, 0.784, 0.969, 1
            size_hint: .3, .002
            pos_hint: {"center_x": .3, "center_y": .218}

        MDFloatLayout:
            md_bg_color: 0.608, 0.784, 0.969, 1
            size_hint: .3, .002
            pos_hint: {"center_x": .7, "center_y": .218}

        MDLabel:
            text: "Réseaux sociaux"
            font_name: "SBarlow"
            font_size: "13sp"
            halign: "center"
            pos_hint: {"center_y": .16}
            color: 0.529, 0.522, 0.757, 1

        MDGridLayout:
            cols: 3
            size_hint: .48, .07
            pos_hint: {"center_x": .5, "center_y": .1}
            Image:
                source: "assets/g.png"
            Image:
                source: "assets/f.png"
            Image:
                source: "assets/a.png"

        MDLabel:
            text: "Vous avez déjà un compte ?"
            font_name: "SBarlow"
            font_size: "11sp"
            pos_hint: {"center_x": .60, "center_y": .04}
            color: 0.941, 0.569, 0.325, 1

        MDTextButton:
            text: "Se connecter"
            font_name: "SBarlow"
            font_size: "11sp"
            pos_hint: {"center_x": .75, "center_y": .04}
            color: 0.063, 0.498, 0.961, 1
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "login"
